<Window x:Class="DalsiWtfApp.Wokno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DalsiWtfApp"
        mc:Ignorable="d"
        Title="Wokno" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Name="T1" Header="Přyhlásyt" MouseUp="H1"/>
            <TabItem Name="T2" Header="Zaregystrovat" MouseUp="H2"/>
        </TabControl>
        <Grid HorizontalAlignment="Left" Height="328" Margin="258,43,0,0" VerticalAlignment="Top" Width="279">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="username" HorizontalAlignment="Center"/>
            <TextBox Name="Username" Grid.Row="1" HorizontalAlignment="Center" Width="100"/>
            <Label Grid.Row="2" Content="heslo" HorizontalAlignment="Center"/>
            <PasswordBox Name="Heslo" Grid.Row="3" HorizontalAlignment="Center" Width="100"/>
            <Label Name="Hlaskovac" Grid.Row="4" HorizontalAlignment="Center"/>
            <TextBox Name="Hlaska" Grid.Row="5" HorizontalAlignment="Center" Width="100" IsEnabled="False" Visibility="Hidden"/>
            <Button Name="Login" Grid.Row="6" Content="Přyhlásyt" Width="150" HorizontalAlignment="Center" Height="20" Click="B1"/>
            <Button Name="Signup" Grid.Row="7" Content="Zaregystrovat" Width="150" HorizontalAlignment="Center" Height="20" Click="B2" IsEnabled="False" Visibility="Hidden"/>
            <Label Name="Errorer" Grid.Row="8" HorizontalAlignment="Center"/>
        </Grid>

    </Grid>
</Window>