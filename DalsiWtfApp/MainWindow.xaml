<Window x:Class="DalsiWtfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DalsiWtfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="LoserName:" FontFamily="Comic Sans MS" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="Red" Margin="20,10,0,0"/>
        <TextBlock x:Name="LoserNameText" FontFamily="Papyrus" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" Foreground="Yellow" Background="Blue" Margin="150,5,0,0" Width="600" TextWrapping="Wrap"/>

        <Label Content="Hláška:" FontFamily="Impact" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="16" Foreground="Purple" Margin="0,70,20,0"/>
        <TextBlock x:Name="HlaskaText" FontFamily="Curlz MT" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="25" Foreground="Orange" Margin="0,100,20,0" Width="400" TextWrapping="Wrap">
            <TextBlock.RenderTransform>
                <RotateTransform Angle="15"/>
            </TextBlock.RenderTransform>
        </TextBlock>

        <Image x:Name="ChotkaFodidelOprasek" HorizontalAlignment="Left" VerticalAlignment="Bottom" Stretch="Fill" Margin="100,0,0,30" Width="300" Height="200">

            <Image.RenderTransform>
                <RotateTransform Angle="330"/>
            </Image.RenderTransform>
        </Image>

        <Button Name="Odlasovac" Content="Odhlásüt" FontFamily="Jokerman" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="HotPink" Foreground="Black" FontSize="40" Width="300" Margin="20,0,0,10" Click="KladaVen"/>
    </Grid>
</Window>
