<Window x:Class="Wtfapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wtfapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle Name="R" HorizontalAlignment="Left" Height="344" Margin="29,33,0,0" Stroke="Black" VerticalAlignment="Top" Width="307" Fill="Black"/>
        <Grid>
            <Grid HorizontalAlignment="Left" Height="222" Margin="418,52,0,0" VerticalAlignment="Top" Width="310" ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Name="l_ruda" Content="Rudá" HorizontalAlignment="Center" Height="25" VerticalAlignment="Center" Width="50" Background="Red"/>
                <TextBox Name="tb_ruda" Grid.Column="1" HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Width="50"/>
                <Label Name="l_zelena" Content="Zelená" HorizontalAlignment="Center" Height="25" Grid.Row="2" VerticalAlignment="Center" Width="50" Background="Green"/>
                <TextBox Name="tb_zelena" Grid.Row ="2" Grid.Column="1" HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Width="50"/>
                <Label Name="l_modra" Content="Modrá" HorizontalAlignment="Center" Height="25" Grid.Row="4" VerticalAlignment="Center" Width="50" Background="Blue"/>
                <TextBox Name="tb_modra" Grid.Row ="4" Grid.Column="1" HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Width="50"/>
                <Slider Name="s_ruda" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="20" Grid.Row="1" VerticalAlignment="Center" Width="200" Maximum="255"/>
                <Slider Name="s_zelena" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="20" Grid.Row="3" VerticalAlignment="Center" Width="200" Maximum="255"/>
                <Slider Name="s_modra" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="20" Grid.Row="5" VerticalAlignment="Center" Width="200" Maximum="255"/>
            </Grid>
        </Grid>
        <Label Name="L"  HorizontalAlignment="Left" Margin="418,300,0,0" VerticalAlignment="Top" Width="310" Height="25" Content="#000000" HorizontalContentAlignment="Center" />
    </Grid>
</Window>
